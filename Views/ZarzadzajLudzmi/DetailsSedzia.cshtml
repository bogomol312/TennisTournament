
@model List<MeczListOpak>

@{
    ViewData["Title"] = "DetailsSedzia";
    string error = ViewBag.Error;
}


<head>
    <meta charset="UTF-8">
    <title>Detali Kibica</title>
    <link rel="stylesheet" href="~/css/EditZawodnik.css" />
</head>
<body>
    <div class="Container">

        <!-- HEADER -->
        <div class="Header">

            <div>
                <label>Witaj </label>
                <label id="HelloUserLabel">Gosc</label>
            </div>

            <div>
                <label>Detali Sedziego</label>
            </div>

        </div>

        <!-- MENU -->
        <div class="Menu">
            <div>
                <a href="/Home/Index/"> Strona Główna</a>
            </div>

            <div>
                <a href="/ListaZawodnikow/"> Lista Zawodników</a>
            </div>

            <div>
                <a href="/ListaMeczow/"> Lista Meczów</a>
            </div>

            <div>
                <a href="/DostepneMiejsca/"> Dostępne miejsca</a>
            </div>

            <div>
                <a href="/Zarejestruj/"> Zarejestruj sie</a>
            </div>
            <div>
                <a href="/ZarzadzajLudzmi/"> Zarządzaj Ludzmi</a>
            </div>
        </div>

        <!-- Content -->
        <div class="Content">

            <div>
                <h3>Obecnosc na meczach</h3>
            </div>

            @if (error.Length < 1)
            {

                <div class="Lista">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Data Meczu
                                </th>
                                <th>
                                    Zawodnik 1
                                </th>
                                <th>
                                    Zawodnik 2
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => s.Data)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => s.Zawodnik1Imie)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => s.Zawodnik2Imie)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <span class="non-valid">@error</span>
            }

            <div>
                <input type="button" value="Wróc" onclick="window.location.href = '/ZarzadzajLudzmi/Sedzia';">
            </div>

        </div>
        <div class="Footer">s18021</div>
    </div>
</body>




