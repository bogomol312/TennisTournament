
@model Zawodnik

@{
    ViewData["Title"] = "DeleteKibic";
}


<head>
    <meta charset="UTF-8">
    <title>Usun Sedziego</title>
    <link rel="stylesheet" href="~/css/EditZawodnik.css" />
</head>
<body>
    <div class="Container">

        <!-- HEADER -->
        <div class="Header">

            <div>
                <label>Witaj </label>
                <label id="HelloUserLabel">Gosc</label>
            </div>

            <div>
                <label>Usun Kibica</label>
            </div>

        </div>

        <!-- MENU -->
        <div class="Menu">
            <div>
                <a href="/Home/Index/"> Strona Główna</a>
            </div>

            <div>
                <a href="/ListaZawodnikow/"> Lista Zawodników</a>
            </div>

            <div>
                <a href="/ListaMeczow/"> Lista Meczów</a>
            </div>

            <div>
                <a href="/DostepneMiejsca/"> Dostępne miejsca</a>
            </div>

            <div>
                <a href="/Zarejestruj/"> Zarejestruj sie</a>
            </div>
            <div>
                <a href="/ZarzadzajLudzmi/"> Zarządzaj Ludzmi</a>
            </div>
        </div>

        <!-- Content -->
        <div class="Content">

            <div>
                <h3>Czy napewno chcesz Usunac Kibica?</h3>
            </div>

            <div>

                <table>

                    <tr>
                        <td>Imie</td>
                        <td>@Html.DisplayFor(model => model.Imie)</td>
                    </tr>

                    <tr>
                        <td>Nazwisko</td>
                        <td>@Html.DisplayFor(model => model.Nazwisko)</td>
                    </tr>
                </table>


                <form asp-action="DeleteKibic" method="post">
                    <input type="hidden" asp-for="IdGosc" />
                    <input type="submit" value="Zatwierdz" onclick="window.location.href = '/ZarzadzajLudzmi/Sedzia';">
                    <input type="button" value="Wróc" onclick="window.location.href = '/ZarzadzajLudzmi/Sedzia';">
                </form>
            </div>



        </div>
        <div class="Footer">s18021</div>
    </div>
</body>





