@model  List<ZawodnikDetails>

@{
    ViewData["Title"] = "Details";
    var msg = ViewBag.Msg;
    var zawodnik = ViewBag.Zawodnik;
    var trener = ViewBag.Trener;
}

<head>
    <meta charset="UTF-8">
    <title>Details</title>
    <link rel="stylesheet" href="~/css/EditZawodnik.css" />
</head>
<body>
    <div class="Container">

        <!-- HEADER -->
        <div class="Header">

            <div>
                <label>Witaj </label>
                <label id="HelloUserLabel">Gosc</label>
            </div>

            <div>
                <label>Szczegoly Zawodnika</label>
            </div>

        </div>

        <!-- MENU -->
        <div class="Menu">
            <div>
                <a href="/Home/Index/"> Strona Główna</a>
            </div>

            <div>
                <a href="/ListaZawodnikow/"> Lista Zawodników</a>
            </div>

            <div>
                <a href="/ListaMeczow/"> Lista Meczów</a>
            </div>

            <div>
                <a href="/DostepneMiejsca/"> Dostępne miejsca</a>
            </div>

            <div>
                <a href="/Zarejestruj/"> Zarejestruj sie</a>
            </div>
            <div>
                <a href="/ZarzadzajLudzmi/"> Zarządzaj Ludzmi</a>
            </div>
        </div>

        <!-- Content -->
        <div class="Content">

            <div>
                <h3>Szczegoly Zawodnika</h3>
            </div>

            <div>
                <table>
                    <tr>
                        <td>Imie</td>
                        <td>@zawodnik.Imie</td>
                    </tr>

                    <tr>
                        <td>Nazwisko</td>
                        <td>@zawodnik.Nazwisko</td>
                    </tr>

                    <tr>
                        <td>Data Urodzenia</td>
                        <td>@zawodnik.DataUrodzenia</td>
                    </tr>

                    <tr>
                        <td>Kraj</td>
                        <td>@zawodnik.Kraj</td>
                    </tr>

                    <tr>
                        <td>Plec</td>
                        <td>@zawodnik.Plec</td>
                    </tr>

                    <tr>
                        <td>Trener</td>
                        <td>@trener</td>
                    </tr>
                </table>
            </div>


            <div class="Lista">
                <h3>Lista zagranych meczów</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model[0].Data)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model[0].Zawodnik1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model[0].Zawodnik2)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model[0].Wynik1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model[0].Wynik2)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => s.Data)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => s.Zawodnik1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => s.Zawodnik2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => s.Wynik1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => s.Wynik2)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <span>@msg</span>
            </div>

            <div>
                <input type="button" value="Wróc" onclick="window.location.href = '/ListaZawodnikow/';">
            </div>

        </div>

    </div>
    <div class="Footer">s18021</div>
</body>

