
@model List<MeczListOpak>

@{
    ViewData["Title"] = "View";
}



<head>
    <meta charset="UTF-8">
    <title>Lista Meczow</title>
    <link rel="stylesheet" href="~/css/ListaZawodnikow.css" />
</head>
<body>

    <div class="Container">

        <!-- HEADER -->
        <div class="Header">

            <div>
                <label>Witaj </label>
                <label id="HelloUserLabel">Gosc</label>
            </div>

            <div>
                <label>Zaloguj Sie</label>
            </div>


        </div>

        <!-- MENU -->
        <div class="Menu">
            <div>
                <a href="/Home/Index/"> Strona Główna</a>
            </div>

            <div>
                <a href="/ListaZawodnikow/"> Lista Zawodników</a>
            </div>

            <div>
                <a href="/ListaMeczow/"> Lista Meczów</a>
            </div>

            <div>
                <a href="/DostepneMiejsca/"> Dostępne miejsca</a>
            </div>

            <div>
                <a href="/Zarejestruj/"> Zarejestruj sie</a>
            </div>
            <div>
                <a href="/ZarzadzajLudzmi/"> Zarządzaj Ludzmi</a>
            </div>
        </div>

        <!-- Content -->
        <div class="Content">

            <div>
                <h3>Lista Meczow</h3>
                <a asp-action="AddMecz">Dodaj Mecz</a>
            </div>

            <div class="Lista">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model[0].Data)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model[0].Zawodnik1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model[0].Zawodnik2)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model[0].Wynik1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model[0].Wynik2)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => s.Data)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => s.Zawodnik1Imie)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => s.Zawodnik2Imie)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => s.Wynik1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => s.Wynik2)
                                </td>
                                <td>
                                    <a asp-action="EditMecz" asp-route-id="@s.IdMecz">Edit</a>
                                    <a asp-action="Details" asp-route-id="@s.IdMecz">Details</a>
                                    <a asp-action="DeleteMecz" asp-route-id="@s.IdMecz">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

        <div class="Footer">s18021</div>
    </div>
</body>