
@model MeczListOpak

@{
    ViewData["Title"] = "Details";

    MeczDetails gosci = ViewBag.Gosci;
}

<head>
    <meta charset="UTF-8">
    <title>Komunikat</title>
    <link rel="stylesheet" href="~/css/EditZawodnik.css" />
</head>
<body>
    <div class="Container">

        <!-- HEADER -->
        <div class="Header">

            <div>
                <label>Witaj </label>
                <label id="HelloUserLabel">Gosc</label>
            </div>

            <div>
                <label>Komunikat</label>
            </div>

        </div>

        <!-- MENU -->
        <div class="Menu">
            <div>
                <a href="/Home/Index/"> Strona Główna</a>
            </div>

            <div>
                <a href="/ListaZawodnikow/"> Lista Zawodników</a>
            </div>

            <div>
                <a href="/ListaMeczow/"> Lista Meczów</a>
            </div>

            <div>
                <a href="/DostepneMiejsca/"> Dostępne miejsca</a>
            </div>

            <div>
                <a href="/Zarejestruj/"> Zarejestruj sie</a>
            </div>
            <div>
                <a href="/ZarzadzajLudzmi/"> Zarządzaj Ludzmi</a>
            </div>
        </div>


        <div class="Content">

            <h3>Informacja o meczu</h3>

            <div>
                <table>
                    <tr>
                        <td>Data</td>
                        <td>@Html.DisplayFor(modelItem => Model.Data)</td>
                    </tr>

                    <tr>
                        <td>Zawodnik 1</td>
                        <td>@Html.DisplayFor(modelItem => Model.Zawodnik1Imie)</td>
                    </tr>

                    <tr>
                        <td>Zawodnik 2</td>
                        <td>@Html.DisplayFor(modelItem => Model.Zawodnik2Imie)</td>
                    </tr>

                    <tr>
                        <td>Wynik 1</td>
                        <td>@Html.DisplayFor(modelItem => Model.Wynik1)</td>
                    </tr>

                    <tr>
                        <td>Wynik 2</td>
                        <td>@Html.DisplayFor(modelItem => Model.Wynik2)</td>
                    </tr>

                    <tr>
                        <td>Sedzia</td>
                        <td>@gosci.Sedzia.Imie @gosci.Sedzia.Nazwisko</td>
                    </tr>

                </table>

                <br />

                <h3>Lista Gosci</h3>

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Imie
                            </th>
                            <th>
                                Nazwisko
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var gosc in gosci.Kibice)
                        {
                            <tr>
                                <td>
                                    @gosc.Imie
                                </td>
                                <td>
                                    @gosc.Nazwisko
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

            <div>
                <input type="button" value="Wróc" onclick="window.location.href = '/ListaMeczow/Index/';">
            </div>

        </div>

        <div class="Footer">s18021</div>
    </div>
</body>