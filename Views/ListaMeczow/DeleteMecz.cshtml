
@model MeczListOpak

@{
    ViewData["Title"] = "DeleteMecz";
    var error = ViewBag.Error;
}

<head>
    <meta charset="UTF-8">
    <title>Usun Mecz</title>
    <link rel="stylesheet" href="~/css/EditZawodnik.css" />
</head>
<body>
    <div class="Container">

        <!-- HEADER -->
        <div class="Header">

            <div>
                <label>Witaj </label>
                <label id="HelloUserLabel">Gosc</label>
            </div>

            <div>
                <label>Usun Mecz</label>
            </div>

        </div>

        <!-- MENU -->
        <div class="Menu">
            <div>
                <a href="/Home/Index/"> Strona Główna</a>
            </div>

            <div>
                <a href="/ListaZawodnikow/"> Lista Zawodników</a>
            </div>

            <div>
                <a href="/ListaMeczow/"> Lista Meczów</a>
            </div>

            <div>
                <a href="/DostepneMiejsca/"> Dostępne miejsca</a>
            </div>

            <div>
                <a href="/Zarejestruj/"> Zarejestruj sie</a>
            </div>
            <div>
                <a href="/ZarzadzajLudzmi/"> Zarządzaj Ludzmi</a>
            </div>
        </div>

        <!-- Content -->
        <div class="Content">

            <div>
                <h3>Czy napewno chcesz Usunac Mecz?</h3>
            </div>

            <div>

                <table>

                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Data)</td>
                        <td>@Html.DisplayFor(model => model.Data)</td>
                    </tr>

                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Zawodnik1)</td>
                        <td>@Html.DisplayFor(model => model.Zawodnik1Imie)</td>
                    </tr>

                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Zawodnik2)</td>
                        <td>@Html.DisplayFor(model => model.Zawodnik2Imie)</td>
                    </tr>

                </table>


                <form asp-action="DeleteMecz">
                    <input type="hidden" asp-for="IdMecz" />
                    <input type="submit" value="Zatwierdz" onclick="window.location.href = '/ListaMeczow/';">
                    <input type="button" value="Wróc" onclick="window.location.href = '/ListaMeczow/';">
                    <span class="non-valid">@error</span>
                </form>
            </div>



        </div>
        <div class="Footer">s18021</div>
    </div>
</body>

